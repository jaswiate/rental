{
    "compilerOptions": {
        "target": "ES2016",
        "outDir": "dist",
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "src/index.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
